.col
  .card.h-100
    .card-header
      .fa.fa-book
      = link_to course.title, course_path(course)
    .card-body
      = course.description
    .card-footer
      .fa.fa-clock-o
      Created on:
      = course.created_at.strftime('%d-%b-%Y')
      // .row
      // .fa.fa-user-o
      // Teacher:
      // = course.user
    .card-footer
      = link_to 'Learn more', course, class: 'btn btn-sm btn-primary'
      = link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-warning'
      = link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure you want to delete it?' }, class: 'btn btn-sm btn-danger'